<div class="container">
    <div class="row"><h1>@character.Name</h1></div>
    <div class="row">
        <div class="col-9">
            <QuoteCard text="@character.Quote" source="@character.Name"></QuoteCard>
            <p>
                @character.Text
            </p>
        </div>
        <div class="col"><BasicInfoCard PortraitUrl="@character.PortraitUrl" BasicInfo="@character.BasicInfo"></BasicInfoCard></div>
    </div> 
</div>

@code {
    [Parameter]
    public Character? character { get; set; } = new Character();
    [Parameter]
    public List<Paragraph> paragraphs { get; set; } = new List<Paragraph>();
}

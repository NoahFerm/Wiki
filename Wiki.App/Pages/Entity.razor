@page "/entity/{Id:int}"
@using Wiki.App.Services;

<PageTitle>Character Name</PageTitle>
<EntityComponent Character="@character"></EntityComponent>


@code {

    [Parameter]
    public int Id{ get; set; }

    private Character character = new Character();
    private List<Paragraph> paragraphs = new List<Paragraph>();

    [Inject]
    public IWikiClient mockClient { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        character = await mockClient.GetCharacterByIdAsync(Id);
        paragraphs = await mockClient.GetParagraphsAsync();
    }

}